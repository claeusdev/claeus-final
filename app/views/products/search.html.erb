<div class="container">
    <div class="col-md-10 col-md-offset-1">
    <h3 class="page-header">Search results</h3>
    <div class="row">
    <% @products.each do |product| %>
        <div class="col-md-3 col-xs-6 col-sm-4 col-lg-3">
        <div class="thumbnail">
            <%= link_to image_tag(product.image.url(:medium)), product %>
            <div class="caption">
            <h3><%= link_to product.name, product %></h3>
            <span class="amount">GHS <%= product.price %></span>
            </div>
        </div>
        </div>
    <% end %>
    </div>
</div>
</div>

