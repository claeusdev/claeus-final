<div class="section">
	<div class="container-fluid">
		<div class="col-md-12">
			<div class="panel panel-danger">
          <div class="panel-heading">Search results</div>
        	<div class="panel-body">
          	<div class="search">
          		<div class="row">
							<% if @products.blank? %>
							  <h3 class="textcenter lead">
							  	We could not find a product that matches your criteria!!
							  </h3>
							<% else %>
							  <% @products.each do |product| %>
									<div class="col-md-3 col-sm-6 col-lg-2">
										<div class="thumbnail">
											<%= image_tag product.images[0].asset, class: "img-responsive" %>
											<div class="caption">
											<h3><%= link_to product.name, product %></h3>
											<span class="amount">GHS <%= product.price %></span>
											</div>
										</div>
									</div>
								<% end %>
							<% end %>
							
							</div>
          	</div>	
        	</div>
    	</div>
		</div>
	</div>
</div>