<div class="">
  <div class="panel panel-default pt6">
    <div class="panel-body">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <%= image_tag (@product.image.medium), class: "img-responsive" %>
        </div>
        <div class="col-sm-6">
           <span class="label label-success">
          <%=  @product.category.name %>
        </span>
        <h3><%= @product.name.capitalize %></h3>
        <h4> <%= number_to_currency(@product.price) %></h4>
        <label>Description:</label>
        <p  class= "well item-desc "><%= @product.description%></p>

        <button type="button" name="button" class="btn btn-primary">Contact Seller</button>
        <button type="button" name="button" class="btn btn-primary">Add to cart</button>


        <% if (user_signed_in?) && (current_user == @user) %>
          <%= link_to "Edit", edit_product_path(@product) %>
          <%= link_to 'Back', products_path %>
          <%= link_to "Delete", @product, method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
        </div>
      </div>
      <hr>
      <br>
      <div class="container">
        <div class="row">
          <% for asset in @product.assets %>
          <div class="col-sm-6">
            <div class="thumbnail">
              <%= image_tag(asset.image.asset)%>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>

