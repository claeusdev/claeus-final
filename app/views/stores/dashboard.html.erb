
<div class="section mt10 mb7">
    <div class="container">
        <div class="row">
          <div class="panel panel-danger">
            <div class="panel-heading">Claeus Merchant Admin Panel</div>
            <div class="panel-body">
              <div class="dashboard">
                  <ul class="nav nav-pills">
                      <li role="presentation" class="active"><a href="#dashboard" data-toggle="tab">Dashboard</a></li>
                      <li role="presentation"><a href="#products" data-toggle="tab">Products</a></li>
                      <li role="presentation"><a href="#orders" data-toggle="tab">Orders</a></li>
                      <li role="presentation"><a href="#promote" data-toggle="tab">Promote</a></li>
                      <li role="presentation"><a href="#settings" data-toggle="tab">Settings</a></li>
                      <li role="presentation"><a href="#messages" data-toggle="tab">Messaging</a></li>
                  </ul>


                  <!-- Tab panes -->
                  <div class="tab-content">
                      <div class="tab-pane fade in active" id="dashboard">

                          <div class="text-center">
                              <h3>Your storefront views</h3>
                              <p class="lead">Your Store has been viewed: <strong><%= @store.impressionist_count %></strong> times</p>
                              <p class="lead"><%= @store.followers.count %> Followers </p>
                              <ul>
                                <% @store.followers.each do |f| %>
                                  <li><%= link_to f.username, f %></li>
                                <% end %>
                              </ul>

                          </div>

                      </div>
                      <div class="tab-pane fade" id="products">
                          <div class="row">
                              <div class="col-sm-8 col-sm-offset-2">
                                <h3 class="text-center">Products</h3>
                                  <div class="text-center">
                                      <a class=" btn btn-danger" id="new-product" >Add Product</a>
                                  </div>
                                  <div class="add-product">
                                      <%= render 'products/form' %>
                                  </div>

                              </div>
                          </div>

                          <div class="row">
                              <hr>

                              <h3 class="text-center">Products</h3>
                              <div class="col-sm-8 col-sm-offset-2">
                                  <% @store.products.each do |p|%>
                                      <div class="media">
                                          <div class="media-left">
                                              <%= image_tag p.images[0].thumb %>
                                          </div>
                                          <div class="media-body">
                                              <h4 class="media-heading"><%= link_to p.name, p %></h4>
                                              <p><%= p.price %></p>
                                              <div class="pull-right">
                                                  <span class="label label-warning"><%= link_to "Edit", edit_product_path(p)%></span>
                                                  <span class="label label-danger"><%= link_to "Delete", p, method: "Delete", data: "Are you sure you want to delete?"%></span>
                                              </div>
                                          </div>
                                      </div>
                                  <% end %>
                              </div>
                          </div>
                      </div>
                      <div class="tab-pane fade" id="orders"><h1 class="text-center pt6">Coming Soon!</h1></div>
                      <div class="tab-pane fade" id="promote"><h1 class="text-center pt6"></h1></div>
                      <div class="tab-pane fade" id="settings">
                        <div class="row">
                            <div class="col-sm-8 col-sm-offset-2">
                              <h3 class="text-center">Edit your store details</h3>

                                <div class="">
                                    <%= render 'stores/form' %>
                                </div>

                            </div>
                        </div>
                      </div>
                      <div class="tab-pane fade" id="messages"><h1 class="text-center pt6">Coming Soon!</h1></div>
                  </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>
