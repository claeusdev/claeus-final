<div class="section mt10">
    <div class="container">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2 class="page-header text-right">Claeus Merchant Admin Panel</h2>

                    <div class="">
                        <ul class="nav nav-tabs">
                            <li role="presentation" class="active"><a href="#dashboard" data-toggle="tab">Dashboard</a></li>
                            <li role="presentation"><a href="#products" data-toggle="tab">Products</a></li>
                            <li role="presentation"><a href="#orders" data-toggle="tab">Orders</a></li>
                            <li role="presentation"><a href="#promote" data-toggle="tab">Promote</a></li>
                            <li role="presentation"><a href="#settings" data-toggle="tab">Settings</a></li>
                            <li role="presentation"><a href="#messages" data-toggle="tab">Messaging</a></li>
                        </ul>


                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="dashboard">
                                
                                <div class="text-center"> 
                                    <h3>Your storefront views</h3>
                                    <p>Your Store has been viewed: <%= @store.impressionist_count %> times</p>
                                </div>
                            
                            </div>
                            <div class="tab-pane fade" id="products">
                                <div class="row">
                                    <div class="col-sm-8 col-sm-offset-2">
                                    <h3 class="text-center">Add a product</h3>
                                        <%= render 'products/form' %>
                                    </div>
                                </div>

                                <div class="row">
                                    <hr>

                                    <h3 class="text-center">All products</h3>
                                    <div class="col-sm-8 col-sm-offset-2">
                                        <% @store.products.each do |p|%>
                                            <div class="media">
                                                <div class="media-left">
                                                    <%= image_tag(p.image.thumb)%>
                                                </div>
                                                <div class="media-body">
                                                    <h4 class="media-heading"><%= p.name %></h4>
                                                    <p><%= p.price %></p>
                                                    <div class="pull-right">
                                                        <span class="label label-warning"><%= link_to "Edit", edit_product_path(p)%></span>
                                                        <span class="label label-danger"><%= link_to "Delete", p, method: "delete", data: "Are you sure you wnat to delete?"%></span>
                                                    </div>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="orders"><h1>Coming Soon</h1></div>
                            <div class="tab-pane fade" id="promote"><h1>Coming Soon</h1></div>
                            <div class="tab-pane fade" id="settings"><h1>Coming Soon</h1></div>
                            <div class="tab-pane fade" id="messages"><h1>Coming Soon</h1></div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>
