<% content_for :title, @store.name + " " + "on Claeus" %>
<div class="">
  <div class="store-front">
    <div class="store-front-header">
      <div class="row">
        <div class="col-sm-12">
          <h1 class="text-center"><%= @store.name.capitalize %></h1>
          <p class="text-center"><%= @store.tagline.capitalize %></p>
          <p class="text-center">Owned by: <%= link_to @store.user.username, user_path(@store.user) %></p>
          <%#<div class="store-cat">
            
          </div>%>
        </div>
      </div>
    </div>
    <div class="section bg-grey">
      <div class="container">
        <div class="row">
          <% @store.products.each do |product| %>
            
              <div class="col-sm-4 col-md-3 col-xs-6">
                <div class="thumbnail">
                  <%= image_tag (product.images[0].medium), class: "img-responsive" %>
                  <div class="caption">
                    <h3><span class="amount"><%= number_to_currency(product.price) %></span> <%= link_to product.name.capitalize, product %></h3>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</div>
