<% content_for :title, @store.name + " " + "on Claeus" %>
<div class="">
  <div class="store-front">
    <div class="store-front-header">
      <div class="row">
        <div class="col-sm-12 text-center">
          <h1 ><%= @store.name.capitalize %></h1>
          <p ><%= @store.tagline.capitalize %></p>
          <p >Owned by: <%= link_to @store.user.username, user_path(@store.user) %></p>
          <p><%= @store.all_tags %></p>
          <span><%= @store.followers.count %> followers</span>
          <% if user_signed_in? &&  current_user != @store.user %>
            <% if current_user.following?(@store) %>
              <%= button_to "Unfollow", relationships_path(store_id: @store.id), method: :delete, class: "btn btn-danger button" %>
              <% else %>
              <%= button_to "Follow", relationships_path(store_id: @store.id), class: "btn btn-danger button" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="section bg-grey">
      <div class="container">
        <div class="row">
          <% @store.products.each do |product| %>

              <div class="col-sm-4 col-md-4 col-xs-6">
                <div class="thumbnail">
                  <%= image_tag (product.images[0].medium), class: "img-responsive" %>
                  <div class="caption">
                    <h3> <%= link_to product.name.capitalize, product %></h3>
                    <div class="caption-bottom">
                      <span class="amount">GHS<%= product.price.round %></span>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
