<% content_for :title, @store.name + " " + "on Claeus" %>
<% content_for :description, @store.tagline  %>
<div class="">
  <div class="store-front">
    <div class="store-front-header">
      <div class="row">
        <div class="col-sm-12 text-center">
          <h1 class="store-name"><%= @store.name.capitalize %></h1>
            <% if @store.tagline.present? %>
              <p><%= @store.tagline.capitalize %></p>
            <% end %>
          <p>Owned by: <%= link_to @store.user.username, user_path(@store.user) %></p>
          <p><%= @store.all_tags %></p>
          <%= follow_button (@store) %>
          <p><%= @store.followers.count %> Followers</p>
        </div>
      </div>
    </div>
    <div class="section bg-grey">
      <div class="container">
        <div class="row">
          <% @store.products.each do |product| %>
              <div class="col-sm-4 col-md-4 col-xs-6">
                <div class="thumbnail">
                  <%= image_tag (product.images[0].medium), class: "img-responsive" %>
                  <div class="caption">
                    <h3> <%= link_to product.name.capitalize, product %></h3>
                    <div class="caption-bottom">
                      <span class="amount"><%= number_to_currency(product.price.round, unit: "GHS" )%></span>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
