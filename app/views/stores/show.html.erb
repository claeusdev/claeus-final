
<div class="">
  <div class="store-front">
    <div class="store-front-header">
      <div class="row">
        <div class="col-sm-12">
          <h1 class="text-center"><%= @store.name.capitalize %></h1>
          <p class="text-center"><%= @store.tagline.capitalize %></p>
          <p class="text-center">Owned by: <%= link_to @store.user.email, user_path(@store.user) %></p>
          <%#<div class="store-cat">
            
          </div>%>
        </div>
      </div>
    </div>
    <div class="bg-light container">
      <div class="row">
        <% @store.products.each do |product| %>
        <div class="col-sm-6 col-md-4 col-xs-6">
          <div class="thumbnail">
            <%= link_to image_tag (product.image.medium), class: "img-responsive" %>
            <div class="caption">
              <h3><span class="amount"><%= number_to_currency(product.price) %></span> <%= link_to product.name.capitalize, product %></h3>
              
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>  
</div>
