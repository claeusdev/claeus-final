<h3><%= @search.term %></h3>	

<div class="row">
	<%  @search.found_products.each do |p| %>
		<div class="col-md-2 col-sm-2 col-xs-6 ">
        <div class="thumbnail">
          <%= image_tag(p.images[0]) %>
          <div class="caption">
          	<h3><%= link_to p.name, p %></h3>
          	<div class="pdt-card-info">
		       		<p class="amount"><%= number_to_currency(p.price, unit: "GHS") %></p>
							<p><%= link_to p.store.name, p.store %></p>
          	</div>
          </div>
        </div>
      </div>
	<% end %>
</div>

<div class="row">
  <%  @search.found_stores.each do |s| %>
    <div class="col-md-2 col-sm-2 col-xs-6 ">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= link_to s.name, s %></h3>
          </div>
        </div>
      </div>
  <% end %>
</div>
