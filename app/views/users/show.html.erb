
<div class="section mt10">
    <div class="container">
      <div class="panel panel-danger">
        <div class="panel-body section">
          <div class="col-sm-8 col-sm-offset-2">
            <div class="media">
              <% if @user.avatar.present? %>
                <div class="media-left">
                  <%= image_tag(@user.avatar.medium) %>
                </div>
              <% end %>
              <div class="media-body">
                <h4 class="media-heading"><h2> Hey, i'm <%= @user.full_name %></h2></h4>
                <p><strong>Member Since: <%= @user.created_at.strftime("%D")%></strong> </p>
                <% if @user.store %>
                    <p>Owns: <%= link_to @user.store.name.capitalize, store_path(@user.store) %></p>
                <% end %>
                <% if @user.store.present? && current_user == @user %>
                  <%= link_to "View your store", store_path(@user.store), class: "btn btn-danger" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
