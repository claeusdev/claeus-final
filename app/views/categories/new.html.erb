<div class="section bg-white">
	<div class="container">
    <div class="col-sm-12 pt6">
        <%= simple_form_for @category , html: { multipart: true } do |c| %>
          <% if @category.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@category.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
              <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="col-sm-6">
							<div class="form-group">
								<%= c.label :name %>
								<%= c.text_field :name, class: "form-control input-lg" %>
								<small>Add a name to your item. eg. iPhone 7 32GB</small>
							</div>
					</div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= c.label :avatar %>
              <%= c.file_field :avatar %>
              <small>Category image/avatar</small>
            </div>
          </div>
          <div class="actions">
            <%= c.submit class: "btn btn-danger btn-block btn-lg" %>
          </div>
      <% end %>
    </div>
</div>
</div>
