<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><%= link_to "See all categories", categories_url %></div>
        <div class="panel-body">
            <h3 class="text-center"><%= @category.name.capitalize %></h3>
            <div class="section">
                <div class="row">
                    <% @category.products.each do |p| %>
                        <div class="col-sm-3 col-xs-6 col-md-3 col-lg-2">
                            <h3><%= p.name %></h3>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
