<% content_for :title, @category.name %>
<div class=" mt10">
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 class="text-center"><%= @category.name.capitalize %></h3>
                <div class="">
                    
                    <% if @category.ancestors.present? %>
                        <ol class="breadcrumb">
                            <% @category.ancestors.each do |c| %>
                                <li><%= link_to c.name, c, class: ("active" if @category.root == c ) %> </li>
                            <% end %>
                        </ol>
                    <% end %>
                    <div class="row">
                        <div class="col-sm-2">
                            <h3>Categories</h3>
                            <%= render 'subcategories', categories: @category.root.descendants.arrange %>
                        </div>
                        <div class="col-sm-10">
                            <div class="row">
                                <% @category.products.each do |p| %>
                                    <div class="col-sm-3 col-xs-6 col-md-3 col-lg-2">
                                        <h3><%= p.name %></h3>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>