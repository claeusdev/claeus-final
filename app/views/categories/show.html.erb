<div class="container">
  <div class="section pt6">
    <h1><%= @category.name %></h1>
    <div class="row">
      <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
              <h2>Top stores in <strong><%= @category.name %></strong> </h2>
              <% @category.stores.each do |store| %>
                <div class="caption">
                  <%= link_to store.name, store %>
                </div>
              <% end %>
            </div>
        </div>
        <hr>
        <div class="row">
          <% @category.subcategories.each do |s| %>
            <div class="col-sm-3">
              <div class="caption">
                <p class="lead"><%= link_to s.name, s %></p class="lead">
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
