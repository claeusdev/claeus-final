<div class="section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-danger">
          <div class="panel-body">
            <h2 class="text-center text-muted">Categories</h2>
            <div class="row section">
              <% @categories.each do |c| %>
                <div class="col-sm-6 col-md-3">
                  <div class="card">
                    <%= link_to c.name, c, class: "text-danger" %>
                    <p class="text-center"><%= c.products.count %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
