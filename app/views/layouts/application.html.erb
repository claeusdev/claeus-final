<!DOCTYPE html>
<html>
  <head>

    <% if Rails.env == "production" %>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({
          google_ad_client: "ca-pub-6569617553535399",
          enable_page_level_ads: true
        });
      </script>
    <% end %>


    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Claeus - Online marketplace for emerging brands. Start selling online in 3-easy steps."%></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>

  <% if current_page?(root_path) %>
    <body class="bg-white">
  <% else %>
    <body class="bg-grey">
  <% end %>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.9&appId=1960576137506127";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>


    
    <%= render 'layouts/header' %>

        <% if notice.present? %>
          <div id="notice_wrapper">
            <p class="notice"><%= notice %></p>
          </div>
        <% elsif alert.present? %>
          <div id="alert_wrapper">
            <p class="alert"><%= alert %></p>
          </div>
        <% end %>

    <%= yield %>
    <%= render 'layouts/footer' %>


    <script>
      $('.star-rating').raty({
        path: '/assets/',
        readOnly: true,
        score: function() {
              return $(this).attr('data-score');
      }
    });
  </script>

  <% if Rails.env == "production" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-99584135-1', 'auto');
      ga('send', 'pageview');

    </script>
  <% end %>
  </body>
</html>
