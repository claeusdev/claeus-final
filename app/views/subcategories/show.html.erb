<div class="container">
  <div class="section pt6">
    <h3 class="text-center"><%= @subcategory.name %></h3>
    <div class="row">
      <% @subcategory.products.each do |p| %>
        <div class="col-sm-3">
          <div class="thumbnail">
            <%= image_tag p.image[0] %>
            <div class="caption">
              <h3><%= link_to p.name, p %></h3>
              <p class="amount">GHS <%= p.price %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
