<div class="section pt6">
  <div class="container">
    <div class="panel panel-danger">
      <div class="panel-body">
        <h3 class="text-center text-muted"><%= @subcategory.name %></h3>
        <div class="row section">
          <% if @subcategory.products.blank? %>
            <p class="lead text-center text-danger">There are no products in this category yet.. Check back later!!</p>
          <% else %>
            <% @subcategory.products.each do |p| %>
              <div class="col-sm-3">
                <div class="thumbnail">
                  <%= image_tag p.images[0].medium %>
                  <div class="caption">
                    <h3><%= link_to p.name, p %></h3>
                    <p class="amount">GHS <%= p.price %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
