

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="text-center">Browse Categories</h3>
            <ul>
              <% @categories.each do |c| %>
                <li><%= c.name %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-sm-9">
        <div class=" panel panel-default">
          <div class="panel-heading">Latest</div>
          <div class="panel-body">
            <% @latest_products.each do |p|%>
              <div class="media">
                <div class="media-left">
                    <%= image_tag(p.image.thumb)%>
                </div>
                <div class="media-body">
                    <h4 class="media-heading"><%= p.name %></h4>
                    <p><%= p.description %></p>
                    <p><%= p.price %></p> <span>By: <%= p.store.name %> </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>