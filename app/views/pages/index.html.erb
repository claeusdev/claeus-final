<section class="container">
  <div class="row">
    <div class="col-sm-3 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <h3>Latest Products</h3>
          
        </div>
      </div>
    </div>
    <div class="col-sm-9 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <h3>Just In ...</h3>

          <div class="">
            <% @latest_products.each do |p|%>
              <div class="media">
                  <div class="media-left">
                      <%= image_tag(p.image.thumb)%>
                  </div>
                  <div class="media-body">
                      <span class="label label-danger"><%= p.category.name %></span>
                      <h4 class="media-heading"><%= link_to p.name, product_path(p) %></h4>
                      <p class="amount"><%= number_to_currency(p.price) %></p>
                  </div>
              </div>
          <% end %>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="bg-white cat-section">
    <div class="container">
      <h2 class="heading">Browse categories <span class="pull-right"><small><%= link_to "View all", categories_path %></small></span></h2>
    
      <div class="row">
        <% @categories.each do |c| %>
          <div class="col-xs-6 col-md-4 col-lg-2">
            <div class="cat-card">
              <p><%= link_to c.name, c %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

