<section>
    <div class="home-hero">
      <div class="container-fluid">
        <h1>Looking for something?</h1>
        <p class="lead">From electronics to home decor, <strong>There's a store!!!</strong></p>
      </div>
    </div>
</section>

<section class="page-section">
  <div class="container">
    <h2 class="text-center">Shop by category</h2> 
    <div class="row">
      <% @categories.each do |c| %>
        <div class="col-md-3 col-sm-6 col-xs-12 col-lg-3">
          <div class="card">
            <%= link_to c.name, c %>
          </div>
        </div>
      <% end %>
    
      <p class="text-center mt10"><%= link_to "View all categories", categories_path %></p>
    </div>
  </div>
</section>
<section class="page-section">
  <div class="container">
    <h2 class="text-center">Latest Stores</h2>
    <div class="row pt6">
      <% @latest_stores.each do |s|%>
      <div class="col-sm-12 col-md-6">
        <div class="card">
         <h3><%= link_to s.name, s %></h3>
         <p>By <%= link_to s.user.username, s.user %></p> 
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>

<section class="page-section">
  <h2 class="text-center">
    Latest products
  </h2>
  <div class="row pt6">
    <% @latest_products.each do |p| %>
      <div class="col-md-2 col-sm-2 col-xs-6 ">
        <div class="thumbnail">
          <%= image_tag(p.images[0]) %>
          <div class="caption">
            <h3><%= link_to p.name, p %></h3>
            <p class="amount"><%= number_to_currency(p.price, unit: "GHS") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
<section class="bottom-cta">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h2>Claeus is the home of emerging brands. You can start <%= link_to "start selling", sell_path , class: 'base-link'%> online in 3 easy steps.</h2>
      </div>
    </div>
  </div>
</section>