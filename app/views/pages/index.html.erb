<div class="home-hero bg-white">
  <div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="">
              <h1>Browse items and experience a unique shopping experience.</h1>
              <%= form_tag search_products_path,  method: :get do |f| %>
                <div class="input-group input-group-lg">
                  <%= text_field_tag :search, nil, placeholder: "Search products & stores", class: "form-control input-lg" %>
                  <span class="input-group-btn"><%= submit_tag "Search", class: "btn btn-danger btn-lg" %></span>
                </div>
              <% end %>
            </div>
        </div>
    </div>
  </div>
</div>
<section class="container">
  <div class="row">
    <div class="section mt10">
      <div class="col-sm-10 col-sm-offset-1">
        <h3>Latest Stores</h3>
        <div class="row">
          <% @latest_shop.each do |s|%>
            <div class="col-sm-4">
              <div class="thumbnail">
              <%= image_tag(s.logo.medium)%>
                <div class="caption">
                  <h3><%= link_to s.name, s %></h3>
                  <p><%=  s.tagline %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
