<div class="container">
  <div class="section mb7">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h3 class="page-header text-right">Sign Up for free and enjoy claeus now</h3>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="col-sm-6 np">
            <div class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true, class: "form-control input-lg" %>
            </div>
          </div>

          <div class="col-sm-6 np pl">
            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, class: "form-control input-lg" %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :username %><br />
            <%= f.email_field :username, class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
          </div>

          <div class="actions">
            <%= f.submit "Create Account", class: "btn btn-danger btn-block btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
