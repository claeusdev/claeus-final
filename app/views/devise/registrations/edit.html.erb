<div class="container">
  <div class="section mb7">
    <div class="panel panel-danger">
      <div class="panel-heading"><h5 class="text-center">Edit your details</h5 class="text-center"></div>
      <div class="panel-body">
        <div class="row">
          <hr>
          <div class="col-md-6 col-md-offset-3">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>


              <div class="col-sm-6 np">
                <div class="form-group">
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name, autofocus: true, class: "form-control input-lg" %>
                </div>
              </div>

              <div class="col-sm-6 np pl">
                <div class="form-group">
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name, class: "form-control input-lg" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :username %><br />
                <%= f.text_field :username, class: "form-control input-lg" %>
              </div>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: "form-control input-lg" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <% if f.object.encrypted_password.present? %>
                <div class="form-group">
                  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
                </div>

                <div class="form-group">
                  <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                  <%= f.password_field :current_password, autocomplete: "off", class: "form-control input-lg" %>
                </div>

              <% end %>


              <div class="actions">
                <%= f.submit "Update", class: "btn btn-danger btn-block btn-lg" %>
              </div>
            <% end %>

            <h3>Cancel my account</h3>

            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete  %></p>

            <%= link_to "Back", :back %>

          </div>
        </div>
      </div>
    </div>

  </div>
</div>
